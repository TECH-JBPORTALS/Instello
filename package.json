{
  "name": "instello",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "bun": ">=1.3.9"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "db:push-erp": "turbo -F @instello/db push-erp",
    "db:push-lms": "turbo -F @instello/db push-lms",
    "db:generate-lms": "turbo -F @instello/db generate-lms",
    "db:generate-erp": "turbo -F @instello/db generate-erp",
    "db:migrate-lms": "turbo -F @instello/db migrate-lms",
    "db:migrate-erp": "turbo -F @instello/db migrate-erp",
    "db:drop-lms": "turbo -F @instello/db drop-lms",
    "db:drop-erp": "turbo -F @instello/db drop-erp",
    "db:studio": "turbo -F @instello/db studio",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@instello/tsconfig": "workspace:*",
    "turbo": "^2.7.2",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@turbo/gen": "^2.4.2"
  },
  "resolutions": {
    "lightningcss": "1.30.1"
  },
  "packageManager": "bun@1.3.9",
  "overrides": {
    "lightningcss": "1.30.1"
  },
  "workspaces": {
    "packages": ["apps/*", "packages/*", "tooling/*"],
    "catalog": {
      "@clerk/nextjs": "^6.36.5",
      "@clerk/types": "^4.101.9",
      "@hookform/resolvers": "^5.1.1",
      "@phosphor-icons/react": "2.1.10",
      "@tanstack/react-query": "^5.83.0",
      "@tanstack/react-table": "^8.21.3",
      "@trpc/client": "^11.4.3",
      "@trpc/tanstack-react-query": "^11.4.3",
      "@biomejs/biome": "2.4.3",
      "recharts": "2.15.4",
      "react-hook-form": "^7.60.0",
      "sonner": "^2.0.6",
      "superjson": "^2.2.2",
      "tailwindcss": "^4.1.14",
      "typescript": "~5.9.2",
      "zod": "^3.25.49"
    },
    "catalogs": {
      "react19": {
        "@types/node": "^24.10.1",
        "@types/react": "~19.1.10",
        "@types/react-dom": "~19.1.10",
        "react": "19.1.0",
        "react-dom": "19.1.0"
      }
    }
  },
  "patchedDependencies": {
    "expo-screen-capture@8.0.9": "patches/expo-screen-capture@8.0.9.patch"
  }
}
